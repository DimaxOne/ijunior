using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Zoo
{
    class Program
    {
        static void Main(string[] args)
        {
            Zoo zoo = new Zoo();
            zoo.Work();
        }

        class Zoo
        {
            private List<Aviary> _aviaries;
            private bool _isWork;

            public Zoo()
            {
                _aviaries = new List<Aviary>();
                _isWork = true;
                _aviaries.Add(new Aviary("Северный вольер"));
                _aviaries[0].CreateMonkey();
                _aviaries.Add(new Aviary("Восточный вольер"));
                _aviaries[1].CreateElephant();
                _aviaries.Add(new Aviary("Южный вольер"));
                _aviaries[2].CreateGoat();
                _aviaries.Add(new Aviary("Западный вольер"));
                _aviaries[3].CreateTiger();
            }

            public void Work()
            {
                while (_isWork)
                {
                    Console.WriteLine("В зоопарке имеются 4 вольера:\n1. Северный вольер;\n2. Восточный вольер;" +
                        "\n3. Южный вольер;\n4. Западный вольер;\n5. Уйти домой.\nВольер с каким номером вы хотите посетить?");

                    string userInput = Console.ReadLine();

                    switch (userInput)
                    {
                        case "1":
                            _aviaries[0].ShowInfo();
                            break;
                        case "2":
                            _aviaries[1].ShowInfo();
                            break;
                        case "3":
                            _aviaries[2].ShowInfo();
                            break;
                        case "4":
                            _aviaries[3].ShowInfo();
                            break;
                        case "5":
                            _isWork = false;
                            break;
                        default:
                            Console.WriteLine("Вы не понимаете чего хотите.");
                            break;
                    }

                    Console.WriteLine("\nДля продолжения нажмите любую клавишу.");
                    Console.ReadKey();
                    Console.Clear();
                }
            }
        }

        class Aviary
        {
            private List<Animal> _animals;
            private Random _random;
            private string _name;

            public Aviary(string name)
            {
                _name = name;
                _animals = new List<Animal>();
                _random = new Random();
            }

            public void CreateMonkey()
            {
                for (int i = 0; i < _random.Next(10,20); i++)
                {
                    _animals.Add(new Monkey());
                }
            }

            public void CreateElephant()
            {
                for (int i = 0; i < _random.Next(10, 20); i++)
                {
                    _animals.Add(new Elephant());
                }
            }

            public void CreateGoat()
            {
                for (int i = 0; i < _random.Next(10, 20); i++)
                {
                    _animals.Add(new Goat());
                }
            }

            public void CreateTiger()
            {
                for (int i = 0; i < _random.Next(10, 20); i++)
                {
                    _animals.Add(new Tiger());
                }
            }

            public void ShowInfo()
            {
                Console.WriteLine($"Вы посетили {_name}. В данном вольере проживают {_animals.Count} особей: ");
                ShowAllAnimals();
            }

            private void ShowAllAnimals()
            {
                for (int i = 0; i < _animals.Count; i++)
                {
                    Console.Write($"{i+1} {_animals[i].Name}, животное издаёт звук {_animals[i].SoundMakes}, пол животного - ");
                    _animals[i].GetGender();
                }
            }
        }

        class Animal
        {
            private Random _random;

            public string Name { get; protected set; }
            public string SoundMakes { get; protected set; }
            public bool IsMan { get; protected set; }

            public Animal()
            {
                _random = new Random();
                IsMan = _random.Next(0, 2) > 0;
                System.Threading.Thread.Sleep(10);
            }

            public void GetGender()
            {
                if (IsMan)
                    Console.WriteLine("мужской.");
                else
                    Console.WriteLine("женский.");
            }
        }

        class Monkey : Animal
        {
            public Monkey(string soundMakes = "У-у", string name = "обезьяна") : base() 
            {
                SoundMakes = soundMakes;
                Name = name;
            }
        }

        class Elephant : Animal
        {
            public Elephant(string soundMakes = "который невозможно услышать", string name = "слон") : base() 
            {
                SoundMakes = soundMakes;
                Name = name;
            }
        }

        class Goat : Animal
        {
            public Goat(string soundMakes = "Ме-е-е-е", string name = "козёл") : base () 
            {
                SoundMakes = soundMakes;
                Name = name;
            }
        }

        class Tiger : Animal
        {
            public Tiger(string soundMakes = "Р-р-р", string name = "тигр") : base() 
            {
                SoundMakes = soundMakes;
                Name = name;
            }
        }
    }
}
